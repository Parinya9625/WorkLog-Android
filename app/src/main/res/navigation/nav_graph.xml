<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/workFragment">

    <fragment
        android:id="@+id/workFragment"
        android:name="com.parinya.worklog.ui.work.WorkFragment"
        android:label="Work Log"
        tools:layout="@layout/fragment_work">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchWorkFragment" />
        <action
            android:id="@+id/action_homeFragment_to_manageHomeFragment"
            app:destination="@id/manageWorkFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchWorkFragment"
        android:name="com.parinya.worklog.ui.search_work.SearchWorkFragment"
        android:label="Search Work"
        tools:layout="@layout/fragment_search_work">
        <action
            android:id="@+id/action_searchFragment_to_manageHomeFragment"
            app:destination="@id/manageWorkFragment" />
    </fragment>
    <fragment
        android:id="@+id/manageWorkFragment"
        android:name="com.parinya.worklog.ui.manage_work.ManageWorkFragment"
        android:label="{type} Work"
        tools:layout="@layout/fragment_manage_work" >
        <argument
            android:name="work"
            app:argType="com.parinya.worklog.db.work.Work"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="type"
            app:argType="com.parinya.worklog.ui.manage_work.ManageHomeType"
            android:defaultValue="Add" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.parinya.worklog.ui.note.NoteFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_note" >
        <action
            android:id="@+id/action_noteFragment_to_manageNoteFragment"
            app:destination="@id/manageNoteFragment" />
    </fragment>
    <fragment
        android:id="@+id/manageNoteFragment"
        android:name="com.parinya.worklog.ui.manage_note.ManageNoteFragment"
        android:label="Manage Note"
        tools:layout="@layout/fragment_manage_note" />
</navigation>