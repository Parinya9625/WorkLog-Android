<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.parinya.worklog.ui.home.HomeFragment"
        android:label="Work Log"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_searchFragment"
            app:destination="@id/searchFragment" />
        <action
            android:id="@+id/action_homeFragment_to_manageHomeFragment"
            app:destination="@id/manageHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.parinya.worklog.ui.search.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_manageHomeFragment"
            app:destination="@id/manageHomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/manageHomeFragment"
        android:name="com.parinya.worklog.ui.manage_work.ManageHomeFragment"
        android:label="{type} Work"
        tools:layout="@layout/fragment_manage_home" >
        <argument
            android:name="work"
            app:argType="com.parinya.worklog.db.work.Work"
            app:nullable="true"
            android:defaultValue="@null" />
        <argument
            android:name="type"
            app:argType="com.parinya.worklog.ui.manage_work.ManageHomeType"
            android:defaultValue="Add" />
    </fragment>
    <fragment
        android:id="@+id/noteFragment"
        android:name="com.parinya.worklog.ui.note.NoteFragment"
        android:label="Notes"
        tools:layout="@layout/fragment_note" />
</navigation>